# Copy this file to .env.local and adjust values as needed
# Frontend environment config for BlogCMS

# Base URL of the backend API (NestJS).
# In dev, the backend runs on port 3001 by default, and API is under /api
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# When serving the site over HTTPS (or behind a reverse proxy that terminates TLS),
# set this to true to force the browser cookies we set on the client to include the Secure flag.
# Note: HttpOnly cannot be set from client-side code. For HttpOnly, set cookies via the backend.
NEXT_PUBLIC_FORCE_SECURE_COOKIES=false

# When using server-set HttpOnly cookies for auth, allow axios to send credentials (cookies)
# across origins. Requires backend CORS credentials=true and allowed origins.
# Note: For cross-site cookies, cookie must be SameSite=None; Secure (HTTPS).
NEXT_PUBLIC_SEND_CREDENTIALS=false

# CSRF config (used when NEXT_PUBLIC_SEND_CREDENTIALS=true)
NEXT_PUBLIC_CSRF_HEADER_NAME=X-CSRF-Token
NEXT_PUBLIC_CSRF_COOKIE_NAME=csrf_token
